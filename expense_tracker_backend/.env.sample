# Backend environment variables
# Copy this file to .env and adjust as needed.

# Service port
PORT=8080

# Database connection - points to the database container/service name
DATABASE_URL=postgresql://expenses_user:secure_password@expense_tracker_database:5432/expenses

# CORS origin - set to your frontend URL for previews/local dev
# Example local dev: http://localhost:3000
# In preview deployments this should be set by the orchestrator to the frontend preview URL
CORS_ORIGIN=http://localhost:3000

# Optional extras (not required but commonly present)
LOG_LEVEL=info
JWT_SECRET=change-me
